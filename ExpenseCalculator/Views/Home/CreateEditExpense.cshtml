@{
    ViewData["Title"] = "Create / Edit";
}

@model ExpenseCalculator.Models.Expense;

<div class="text-center">
    <h1 class="display-4">Create / Edit Expenses</h1>
</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Home" method="post">
    <input hidden class="form-control" placeholder="0" type="number" asp-for="ID"/>
    <label>Value</label>
    <input class="form-control" placeholder="0" type="number" asp-for="Value" step="0.01"/>
    <label>Description</label>
    <input class="form-control" placeholder="Add a description" type="text" asp-for="Description" />
    <br />
    <button type="submit" class="btn btn-primary">Save</button>

</form>
